<?xml version="1.0" encoding="utf-8"?>

<FrameLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/lion">



    <LinearLayout
        android:orientation="vertical"
        android:weightSum="4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".Trouve_paire">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_11"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:tag="0"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_12"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:tag="1"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_13"
                android:layout_weight="1"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:tag="2"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_14"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scaleType="centerInside"
                android:tag="3"
                android:src="@drawable/back_card"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_21"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="4"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_22"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="5"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_23"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="6"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_24"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="7"
                android:src="@drawable/back_card"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="4"
            android:layout_weight="1"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/iv_31"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="8"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_32"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="9"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_33"
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:scaleType="centerInside"
                android:tag="10"
                android:src="@drawable/back_card"/>

            <ImageView
                android:id="@+id/iv_34"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingBottom="0dp"
                android:layout_weight="1"
                android:scaleType="centerInside"
                android:tag="11"
                android:src="@drawable/back_card" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="horizontal">

            <Button
                android:id="@+id/Retour_trouve_paire"
                android:layout_width="200dp"
                android:layout_height="80dp"
                android:text="Retour"
                style = "@style/MyButtonStyle">
            </Button>
        </LinearLayout>



    </LinearLayout>



</FrameLayout>



